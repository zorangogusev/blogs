<h4 class="mt-5">Edit Blog</h4>

<form action="/blog/edit/<%= blog.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input required value="<%= blog.title %>" type="text" name="title" id="title" class="form-control">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" class="form-control"><%= blog.description %></textarea>
    </div>

    <a href="/bloger/dashboard" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>
  